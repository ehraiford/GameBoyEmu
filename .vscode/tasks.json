{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ (GCC)",
            "type": "shell",
            "command": "/opt/homebrew/bin/g++-14",
            "args": [
                "-std=c++23",
                "main.cpp",
                "-o",
                "main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Run C++",
            "type": "shell",
            "command": "./main",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
