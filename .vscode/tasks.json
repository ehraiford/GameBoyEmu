{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Sanitizers",
            "type": "shell",
            "command": "g++",
            "args":  ["-std=c++23", "-fsanitize=undefined", "-g", "-o", "gameboy_emulator", "main.cpp", "Ram.cpp", "Cpu.cpp"],
            "problemMatcher": []
        },
        {
            "label": "Run Cppcheck",
            "type": "shell",
            "command": "cppcheck --enable=all --inconclusive ${file}",
            "problemMatcher": []
        },
        {
            "label": "Run Emulator",
            "type": "shell",
            "command": "./gameboy_emulator",
            "dependsOn": "Build With Sanitiers",
            "problemMatcher": []
        },
        {
            "label": "Run Infer",
            "type": "shell",
            "command": "infer run -- clang++ -c ${file}",
            "problemMatcher": []
        }
    ]
}
